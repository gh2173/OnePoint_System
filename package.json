{
  "name": "onepoint-lesson",
  "version": "1.0.0",
  "description": "OnePoint Report",
  "main": "main.js",
  "author": "NEPES",
  "homepage": "http://./",
  "scripts": {
    "start": "electron .",
    "web": "node server.js",
    "dev": "nodemon server.js",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.nepes.onepoint-lesson",
    "productName": "One Point Lesson",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!dist/**/*",
      "!server.js",
      "!web-*"
    ],
    "extraResources": [
      {
        "from": "OnePointRaw.xlsx",
        "to": "OnePointRaw.xlsx"
      }
    ],
    "extraFiles": [
      {
        "from": "OnePointRaw.xlsx",
        "to": "OnePointRaw.xlsx"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "OnePointLesson-Setup-${version}.${ext}",
      "publisherName": "NEPES"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "One Point Lesson",
      "artifactName": "OnePointLesson-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "OnePointLesson-Portable-${version}.${ext}"
    }
  },
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1",
    "nodemon": "^3.0.1"
  },
  "license": "ISC"
}
